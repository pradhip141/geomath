#include <stdio.h>
#include <stdlib.h>

#ifdef _WIN32
#include <windows.h>
#else
#include <unistd.h>
#endif
#include <stdio.h>
#include <string.h>
#define MAX_COURSES 50
#define MAX_STUDENTS 10
#define MAX_COURSE_CODE 10
#define MAX_COURSE_NAME 50
#define MAX_STUDENT_ID 10
#define MAX_PASSWORD 10
#define MAX_STREAM 2
#define MAX_CAREER_SCOPE 100
#define MAX_SALARY 20


void delay(int ms) {
#ifdef _WIN32
    Sleep(ms);
#else
    usleep(ms * 1000);
#endif
}

// TYPEWRITER WITHOUT SOUND
void typewriter(const char *text, int speed) {
    while (*text) {
        printf("%c", *text);
        fflush(stdout);
        delay(speed);
        text++;
    }
}

void frontScreen() {

    system(
#ifdef _WIN32
        "cls"
#else
        "clear"
#endif
    );

    typewriter("\n=============================================\n", 15);
    typewriter("          COURSE REGISTRATION\n", 15);
    typewriter("             MANAGEMENT SYSTEM\n", 15);
    typewriter("=============================================\n\n", 15);

    // CRMS LOGO (NO SOUND)
    // LARGE CRMS LOGO
    typewriter("   ██████╗██████╗ ███╗   ███╗███████╗\n", 2);
    typewriter("  ██╔════╝██╔══██╗████╗ ████║██╔════╝\n", 2);
    typewriter("  ██║     ██████╔╝██╔████╔██║█████╗  \n", 2);
    typewriter("  ██║     ██╔══██╗██║╚██╔╝██║██╔══╝  \n", 2);
    typewriter("  ╚██████╗██║  ██║██║ ╚═╝ ██║███████╗\n", 2);
    typewriter("   ╚═════╝╚═╝  ╚═╝╚═╝     ╚═╝╚══════╝\n\n", 2);
    typewriter("                C  R  M  S\n\n", 3);

    // WELCOME LOGO
    typewriter("██╗    ██╗███████╗███╗   ███╗ ██████╗ ██████╗ ███╗   ███╗███████╗\n", 3);
    typewriter("██║    ██║██╔════╝████╗ ████║██╔════╝██╔═══██╗████╗ ████║██╔════╝\n", 3);
    typewriter("██║ █╗ ██║█████╗  ██╔████╔██║██║     ██║   ██║██╔████╔██║█████╗  \n", 3);
    typewriter("██║███╗██║██╔══╝  ██║╚██╔╝██║██║     ██║   ██║██║╚██╔╝██║██╔══╝  \n", 3);
    typewriter("╚███╔███╔╝███████╗██║ ╚═╝ ██║╚██████╗╚██████╔╝██║ ╚═╝ ██║███████╗\n", 3);
    typewriter(" ╚══╝╚══╝ ╚══════╝╚═╝     ╚═╝ ╚═════╝ ╚═════╝ ╚═╝     ╚═╝╚══════╝\n\n", 3);
    typewriter("                           WELCOME\n\n", 3);

    typewriter("DEVELOPED BY:\n", 20);
    typewriter("  • Team Member 1\n", 10);
    typewriter("  • Team Member 2\n", 10);
    typewriter("  • Team Member 3\n", 10);
    typewriter("  • Team Member 4\n\n", 10);

    typewriter("Loading", 200);
    for (int i = 0; i < 5; i++) {
        typewriter(".", 200);
    }
    printf("\n");
}


#include <stdio.h>
#include <string.h>
#define MAX_COURSES 50
#define MAX_STUDENTS 10
#define MAX_COURSE_CODE 10
#define MAX_COURSE_NAME 50
#define MAX_STUDENT_ID 10
#define MAX_PASSWORD 10
#define MAX_STREAM 2
#define MAX_CAREER_SCOPE 100
#define MAX_SALARY 20

typedef struct {
    char courseCode[MAX_COURSE_CODE];
    char courseName[MAX_COURSE_NAME];
    int credits;
    char prerequisites[MAX_COURSE_CODE];
    char careerScope[MAX_CAREER_SCOPE];
    char salary[MAX_SALARY];
    char jobRoles[MAX_CAREER_SCOPE];
} Course;

typedef struct {
    char studentID[MAX_STUDENT_ID];
    char password[MAX_PASSWORD];
    Course registeredCourses[MAX_COURSES];
    int courseCount;
} Student;

typedef struct {
    char streamName[20];
    Course courses[MAX_COURSES];
} Stream;

