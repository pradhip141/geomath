Student students[MAX_STUDENTS];

void displayStreams() {
    printf("\t\t##############---AVAILABLE STREAMS---##############:\n\n");
    for (int i = 0; i < MAX_STREAM; i++) {
        printf("\t\t\t\tPRESS %d.  FOR %s\n", i+1, streams[i].streamName);
    }
}

void displayCourses(int streamIndex) {
    printf("\n--------------------Available Courses in %s:--------------------\n\n", streams[streamIndex].streamName);
    for (int i = 0; i < MAX_COURSES; i++) {
        if (strcmp(streams[streamIndex].courses[i].courseCode, "") != 0) {
            printf("%s - %s (%d credits)\n", streams[streamIndex].courses[i].courseCode, streams[streamIndex].courses[i].courseName, streams[streamIndex].courses[i].credits);
            printf("CAREER SCOPE: %s\n", streams[streamIndex].courses[i].careerScope);
            printf("SALARY: %s\n", streams[streamIndex].courses[i].salary);
            printf("JOB ROLES: %s\n", streams[streamIndex].courses[i].jobRoles);
            printf("\n");
        }
    }
}

void registerCourse(Student* student, char* courseCode, int streamIndex) {
    for (int i = 0; i < MAX_COURSES; i++) {
        if (strcmp(streams[streamIndex].courses[i].courseCode, courseCode) == 0) {
            student->registeredCourses[student->courseCount] = streams[streamIndex].courses[i];
            student->courseCount++;
            printf("Course registered successfully!\n\n");
            return;
        }
    }
    printf("Course not found!\n\n");
}

void displayRegisteredCourses(Student* student) {
    printf("Registered Courses:\n");
    for (int i = 0; i < student->courseCount; i++) {
        printf("%s - %s (%d credits)\n", student->registeredCourses[i].courseCode, student->registeredCourses[i].courseName, student->registeredCourses[i].credits);
        printf("CAREER SCOPE: %s\n", student->registeredCourses[i].careerScope);
        printf("SALARY: %s\n", student->registeredCourses[i].salary);
        printf("JOB ROLES: %s\n", student->registeredCourses[i].jobRoles);
        printf("\n");
    }
}

int main() {
    
    
    frontScreen();
    int choice;
    char studentID[MAX_STUDENT_ID];
    char password[MAX_PASSWORD];
    Student* currentStudent = NULL;
    int streamIndex = -1;

    printf("===========Welcome to the Course Registration Management System!============\n");
    for (int i = 0; i < MAX_STUDENTS; i++) {
        students[i].courseCount = 0;
    }

    while (1) {
        printf("\t\t--------------------MAIN MENU (FIRST) --------------------\n\n");
        printf("\t\t\t\tPRESS 1.  TO SIGN IN USER\n");
        printf("\t\t\t\tPRESS 2.  TO REGISTER NEW USER\n");
        printf("\t\t\t\tPRESS 3.  TO EXIT MAIN MENU\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter student ID: ");
                scanf("%s", studentID);
                printf("Enter password: ");
                scanf("%s", password);
                for (int i = 0; i < MAX_STUDENTS; i++) {
                    if (strcmp(students[i].studentID, studentID) == 0 && strcmp(students[i].password, password) == 0) {
                        currentStudent = &students[i];
                        break;
                    }
                }
                if (currentStudent != NULL) {
                    printf("Login successful!\n\n");
                    displayStreams();
                    printf("Enter stream number: ");
                    scanf("%d", &streamIndex);
                    streamIndex--;
                    while (1) {
                        printf("\t\t--------------------MAIN MENU (SECOND)--------------------\n\n");
                        printf("\t\t\t\tPRESS 1. TO DISPLAY COURSES\n");
                        printf("\t\t\t\tPRESS 2. TO REGISTER COURSE\n");
                        printf("\t\t\t\tPRESS 3. TO DISPLAY REGISTERED COURSES\n");
                        printf("\t\t\t\tPRESS 4. TO LOGOUT\n\n");
                        printf("Enter your choice: ");
                        scanf("%d", &choice);
                        switch (choice) {
                            case 1:
                                displayCourses(streamIndex);
                                break;
                            case 2:
                                printf("Enter course code: ");
                                char courseCode[MAX_COURSE_CODE];
                                scanf("%s", courseCode);
                                registerCourse(currentStudent, courseCode, streamIndex);
                                break;case 3:
                                displayRegisteredCourses(currentStudent);
                                break;
                            case 4:
                                currentStudent = NULL;
                                break;
                            default:
                                printf("Invalid choice!\n\n");
                        }
                        if (currentStudent == NULL) {
                            break;
                        }
                    }
                } else {
                    printf("Invalid student ID or password!\n\n");
                }
                break;
            case 2:
                printf("Enter student ID: ");
                scanf("%s", studentID);
                printf("Enter password: ");
                scanf("%s", password);
                for (int i = 0; i < MAX_STUDENTS; i++) {
                    if (strcmp(students[i].studentID, "") == 0) {
                        strcpy(students[i].studentID, studentID);
                        strcpy(students[i].password, password);
                        students[i].courseCount = 0;
                        printf("Registration successful!\n\n");
                        break;
                    }
                }
                break;
            case 3:
                return 0;
            default:
                printf("Invalid choice!\n\n");
        }
    }
    return 0;
}
